<div class="d-flex justify-content-between align-items-center my-4">
  <h1>Found animals</h1>
  <%= link_to "Add a new animal", new_pet_path, class: 'btn btn-primary'  %>
</div>
<div class="row justify-content-center">
  <div class="col-6">
    <ul class="list-group">
      <% @pets.each do |pet| %>
        <li class="list-group-item"><%= link_to pet.name, pet_path(pet) %> <span class="badge text-bg-primary"><%= pet.species %></span></li>
      <% end %>
    </ul>
  </div>
</div>