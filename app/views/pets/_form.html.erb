<div class="row justify-content-center">
  <div class="col-6">
    <%= simple_form_for @pet do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :species, collection: Pet::SPECIES %>
      <%= f.input :found_on %>
      <%= f.button :submit, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>